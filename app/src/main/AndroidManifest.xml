<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ouryearbook">
    //enables internet access
<uses-permission android:name="android.permission.INTERNET"/>
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OurYearbook">
        <activity
            android:name=".graduation4"
            android:exported="false" />
        <activity
            android:name=".Yearbook4"
            android:exported="false" />
        <activity
            android:name=".graduation3"
            android:exported="false" />
        <activity
            android:name=".graduation2"
            android:exported="false" />
        <activity
            android:name=".graduation1"
            android:exported="false" />
        <activity
            android:name=".Yearbook3"
            android:exported="false" />
        <activity
            android:name=".Yearbook2"
            android:exported="false" />
        <activity
            android:name=".Yearbook1"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ReminderBroadcast"/>
    </application>

</manifest>